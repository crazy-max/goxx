#!/usr/bin/env bash

: "${MACOSX_DEPLOYMENT_TARGET=}"

set -e

source goxx-env

if [ "${GOOS}" != "darwin" ]; then
  exit 0
fi

if [ -z "$MACOSX_DEPLOYMENT_TARGET" ]; then
  export MACOSX_DEPLOYMENT_TARGET=10.10
  if [ "${GOARCH}" = "arm64" ]; then
    export MACOSX_DEPLOYMENT_TARGET=11.2
  fi
fi

echo 1 | osxcross-macports select-mirror >/dev/null 2>&1 || true

packages=
parsed=
n=$#
for p in "$@"; do
  if [ $# = $n ]; then set --; fi
  arg=
  case "$p" in
    -*)
      arg="$p"
      ;;
    "install" | "search")
      parsed=1
      arg="$p"
      ;;
    *)
      if [ -n "$parsed" ]; then
        if [ -z "${packages}" ]; then
          packages="$p"
        else
          packages="${packages} ${p}"
        fi
      else
        arg="$p"
      fi
      ;;
  esac
  if [ -n "$arg" ]; then
    set -- "$@" "$arg"
  fi
done

for p in ${packages}; do
  n=${p}
  set -- "$@" "$n"
done

flags=""
if [ "${GOARCH}" = "arm64" ]; then
  flags="--arm64"
fi

set -x
exec osxcross-macports $flags "$@"
